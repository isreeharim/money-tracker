<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Projects</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>

<div class="container">

  <!-- HEADER -->
  <div class="header">
    <div class="header-title">My Projects</div>
  </div>

  <!-- CREATE PROJECT (PRIMARY CARD) -->
  <div class="balance-card" style="margin-bottom:24px;">
    <div class="balance-label">Create New Project</div>

    <form method="POST" action="/projects">
      <input
        name="name"
        placeholder="Project name"
        required
        style="margin-top:14px;"
      >
      <button class="primary" style="margin-top:16px;">
        Create Project
      </button>
    </form>
  </div>

  <!-- PROJECT LIST -->
  <% if (projects.length === 0) { %>
    <div class="section">
      <div class="tx-meta">No projects yet</div>
    </div>
  <% } %>

  <% projects.forEach(p => { %>
    <div class="section" style="margin-bottom:16px;">

      <a href="/projects/<%= p._id %>" style="text-decoration:none;color:inherit;">
        <div style="display:flex;justify-content:space-between;align-items:center;">
          <div>
            <div class="tx-title"><%= p.name %></div>
            <div class="tx-meta">Tap to open</div>
          </div>
          <span style="font-size:20px;">â€º</span>
        </div>
      </a>

      <!-- DELETE PROJECT -->
      <form
        method="POST"
        action="/projects/<%= p._id %>/delete"
        onsubmit="return confirm('Delete this project and all its data?')"
      >
        <button class="danger" style="margin-top:12px;">
          Delete Project
        </button>
      </form>

    </div>
  <% }) %>

</div>

</body>
</html>
